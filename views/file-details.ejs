<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>File Details</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <div class="container">
    <header class="header">
      <div class="brand">
        <div class="logo" aria-hidden="true"></div>
        <div>File Uploader</div>
      </div>

      <nav class="nav" role="navigation" aria-label="Main">
        <%- include("partials/navigation.ejs") %>
      </nav>
    </header>

    <main>
      <section class="breadcrumbs" aria-label="You are here">
        <% if (locals.currentPath && locals.currentPath.length) { %>
          <% locals.currentPath.forEach((p, i) => { %>
            <a href="/folder/<%= p.id %>"><%= p.name %></a>
            <% if (i < locals.currentPath.length - 1) { %><span>/</span><% } %>
          <% }) %>
        <% } else { %>
          <span class="text-muted">Home</span>
        <% } %>
      </section>

      <section class="file-details" style="margin-top:1rem;">
        <h2><%= file.name %></h2>
        <p class="text-muted">Size: <%= file.size %> bytes</p>
        <p class="text-muted">Uploaded: <%= file.uploadedAt %></p>

        <div style="margin-top:0.75rem;">
          <a class="btn btn-primary" href="/file/<%= file.id %>/download">Download</a>
          <a href="/file/<%= file.id %>/delete" class="btn btn-danger">Delete</a>
          <a class="btn btn-ghost" href="<%= file.directoryId ? '/folder/' + file.directoryId : '/' %>">Back</a>
        </div>
      </section>
    </main>
  </div>
</body>
</html>