<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Edit Folder</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <div class="container">
    <header class="header">
      <div class="brand">
        <div class="logo" aria-hidden="true"></div>
        <div>File Uploader</div>
      </div>

      <nav class="nav" role="navigation" aria-label="Main">
        <%- include("partials/navigation.ejs") %>
      </nav>
    </header>

    <main>
      <section class="breadcrumbs" aria-label="You are here">
        <% if (locals.currentPath && locals.currentPath.length) { %>
          <% locals.currentPath.forEach((p, i) => { %>
            <a href="/folder/<%= p.id %>"><%= p.name %></a>
            <% if (i < locals.currentPath.length - 1) { %>
              <span aria-hidden="true">/</span>
            <% } %>
          <% }) %>
        <% } else { %>
          <span class="text-muted">Home</span>
        <% } %>
      </section>

      <section style="margin-top:1rem; max-width:680px;">
        <h2>Edit Folder</h2>

        <div class="form" role="form" aria-labelledby="edit-folder-heading">
          <form action="/edit-folder" method="POST" novalidate>
            <input type="hidden" name="folder_id" value="<%= folder.id %>">

            <label for="name">Folder name
              <input id="name" name="name" type="text" value="<%= folder.name %>" required>
            </label>

            <div style="display:flex; gap:0.5rem; margin-top:0.75rem; align-items:center;">
              <button type="submit" class="btn btn-primary">Update</button>

              <% if (folder && folder.id) { %>
                <a class="btn btn-ghost" href="/folder/<%= folder.id %>">Cancel</a>
              <% } else { %>
                <a class="btn btn-ghost" href="/">Cancel</a>
              <% } %>

              <form method="post" action="/folder/<%= folder.id %>/delete" style="display:inline; margin-left:auto;">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </form>
        </div>

        <%- include("partials/errors.ejs") %>
      </section>
    </main>
  </div>
</body>
</html>